<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/results_fragment_layout_container">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_fragment_list_text_info_c"
            android:text="@string/results_fragment_text_view_congruent"
            android:textColor="@android:color/secondary_text_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_fragment_list_text_error_congruent"
            android:layout_toRightOf="@id/results_fragment_list_text_info_c"
            android:text="@string/text_view_default"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_fragment_list_text_time_congruent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/text_view_default"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_fragment_list_text_info_i"
            android:text="@string/results_fragment_text_view_incongruent"
            android:textColor="@android:color/secondary_text_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_fragment_list_text_error_incongruent"
            android:layout_toRightOf="@id/results_fragment_list_text_info_i"
            android:text="@string/text_view_default"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_fragment_list_text_time_incongruent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/text_view_default"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

</LinearLayout>